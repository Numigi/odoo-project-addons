<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="meeting_minutes_discuss_point_view_form" model="ir.ui.view">
        <field name="name">meeting.minutes.discuss.point.form</field>
        <field name="model">meeting.minutes.discuss.point</field>
        <field name="arch" type="xml">
            <form string="Discussed Point">
                <sheet>
                    <group>
                        <field name="minutes_task_id" string="Task"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="meeting_minutes_discuss_point_view_tree" model="ir.ui.view">
        <field name="name">meeting.minutes.discuss.point.tree</field>
        <field name="model">meeting.minutes.discuss.point</field>
        <field name="arch" type="xml">
            <tree string="Discussed Points">
                <field name="sequence" widget="handle"/>
                <field name="minutes_task_id" string="Task"/>
                <field name="notes" widget="html"/>
            </tree>
        </field>
    </record>

    <record id="meeting_minutes_discuss_point_action" model="ir.actions.act_window">
        <field name="name">Discussed Points</field>
        <field name="res_model">meeting.minutes.discuss.point</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('task_id', '=', active_id)]</field>
    </record>

</odoo>
