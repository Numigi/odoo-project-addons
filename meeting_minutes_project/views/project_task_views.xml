<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ir_actions_task_meeting_minutes_tree" model="ir.ui.view">
        <field name="model">meeting.minutes.project</field>
        <field name="name">Meeting minutes</field>
        <field name="arch" type="xml">
            <tree string="Meeting Minutes">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="mean_communication_id"/>
                <field name="partner_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="action_view_task_meeting_minutes" model="ir.actions.act_window">
        <field name="name">Meeting minutes</field>
        <field name="res_model">meeting.minutes.project</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="ir_actions_task_meeting_minutes_tree"/>
        <field name="context">{
            'search_default_user_id': [uid],
            'search_default_task_id': [active_id],
            'default_task_id': active_id,
            'default_user_id': uid,
        }
        </field>
        <field name="domain">[('task_id', '=', active_id)]</field>
    </record>

    <record id="project_task_form_view_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="open_meeting_minutes" string="Meeting Minutes" type="object" class="oe_highlight"/>
            </xpath>
            <div class="oe_button_box" position="inside">
                <button name="%(meeting_minutes_discuss_point_action)d" type="action" attrs="{'invisible': [('mentions_count', '=', 0)]}"
                        class="oe_stat_button" icon="fa-quote-right">
                    <field name="mentions_count" string="Mentions" widget="statinfo"/>
                </button>
            </div>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="%(action_view_task_meeting_minutes)d" attrs="{'invisible': [('meeting_minutes_count', '=', 0)]}"
                    type="action" class="oe_stat_button order-9"  icon="fa-exchange" groups="project.group_project_user">
                    <field name="meeting_minutes_count" widget="statinfo" string="Meeting minutes"/>
                </button>
            </xpath>
        </field>
    </record>


</odoo>
