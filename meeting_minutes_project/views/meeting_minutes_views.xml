<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="meeting_minutes_project_view_form" model="ir.ui.view">
        <field name="name">meeting.minutes.project.form</field>
        <field name="model">meeting.minutes.project</field>
        <field name="arch" type="xml">
            <form string="Communication">
                <header>
                </header>
                <sheet>
                    <div class="oe_title pr-0">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name"/>
                        </h1>
                    </div>

                    <h2>Context</h2>
                    <group>

                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>

                        <group>
                            <field name="mean_communication_id"/>
                            <field name="project_id"/>
                            <field name="task_id"/>

                        </group>
                    </group>

                    <group>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>

                    <notebook>
                        <page name="meeting_minutes" string="Meeting Minutes">
                            <h2>Planned Points</h2>
                            <group>
                                <field name="planned_point" nolabel="1"/>
                            </group>

                            <h2>Discussed Points</h2>
                            <group>
                                <field name="discuss_point_ids" nolabel="1" colspan="4">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="task_id"/>
                                        <field name="notes" widget="html"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="task_id"/>
                                            <field name="notes" widget="html"/>
                                        </group>
                                    </form>
                                </field>
                                <field name="additional_note" nolabel="1" colspan="4"/>
                            </group>

                            <h2>Homework</h2>
                            <group>
                                <field name="homework_ids" nolabel="1">
                                    <tree>
                                        <field name="task_id"/>
                                        <field name="summary"/>
                                        <field name="note"/>
                                        <field name="user_id"/>
                                        <field name="date_deadline"/>
                                    </tree>
                                    <form string="Log an Activity">
                                        <sheet string="Activity">
                                            <group invisible="1">
                                                <field name="activity_category" invisible="1"/>
                                                <field name="res_model" invisible="1"/>
                                                <field name="res_model_id" invisible="1"/>
                                                <field name="res_id" invisible="1"/>
                                                <field name="force_next" invisible="1"/>
                                                <field name="previous_activity_type_id"/>
                                                <field name="has_recommended_activities"/>
                                            </group>
                                            <group attrs="{'invisible': [('has_recommended_activities','=',False)]}">
                                                <div class="o_row">
                                                    <strong>Recommended Activities</strong>
                                                    <field name="recommended_activity_type_id" widget="selection_badge" domain="[('previous_type_ids', '=', previous_activity_type_id)]" nolabel="1"/>
                                                </div>
                                            </group>
                                            <group>
                                                <group>
                                                    <field name="task_id" required="1"/>
                                                    <field name="activity_type_id" required="1" invisible="1" options="{'no_create': True, 'no_open': True}"/>
                                                    <field name="summary"/>
                                                </group>
                                                <group>
                                                    <field name="date_deadline"/>
                                                    <field name="user_id"/>
                                                </group>
                                            </group>
                                            <field name="note" placeholder="Log a note..."/>
                                        </sheet>
                                    </form>
                                </field>
                            </group>

                            <h2>Resources</h2>
                            <group>
                                <field name="resources" nolabel="1"/>
                            </group>

                            <h2>Risks</h2>
                            <group>
                                <field name="risks" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="meeting_minutes_project_view_tree" model="ir.ui.view">
        <field name="name">meeting.minutes.project.tree</field>
        <field name="model">meeting.minutes.project</field>
        <field name="arch" type="xml">
            <tree string="Meeting Minutes">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="mean_communication_id"/>
                <field name="partner_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="meeting_minutes_project_view_search" model="ir.ui.view">
        <field name="name">meeting.minutes.project.search</field>
        <field name="model">meeting.minutes.project</field>
        <field name="arch" type="xml">
            <search string="Activities Analysis">
                <field name="project_id" string="Project"/>
                <field name="task_id" string="Task"/>
                <group expand="1" string="Group By">
                    <filter string="Project" name="group_by_project" context="{'group_by':'project_id'}"/>
                    <filter string="Task" name="group_by_task" context="{'group_by':'task_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_meeting_minutes" model="ir.actions.act_window">
        <field name="name">Meeting Minutes</field>
        <field name="res_model">meeting.minutes.project</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new meeting minutes
            </p>
        </field>
    </record>

    <menuitem
            id="menu_meeting_minutes"
            name="Meeting Minutes"
            parent="project.menu_project_report"
            action="meeting_minutes_project.action_meeting_minutes"
            sequence="0"
    />

</odoo>
