<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="task_search_with_parent_projects" model="ir.ui.view">
        <field name="name">Task Search With Parent Projects</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <field name="project_id" position="after">
                <field name="parent_project_ids"/>
            </field>
        </field>
    </record>

    <record id="project.act_project_project_2_project_task_all" model="ir.actions.act_window">
        <!-- Replace search_default_project_id with search_default_parent_project_ids -->
        <field name="context">{
            'group_by': 'stage_id',
            'search_default_parent_project_ids': [active_id],
            'default_project_id': active_id,
        }</field>
    </record>

</odoo>
