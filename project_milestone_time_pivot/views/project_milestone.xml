<?xml version="1.0" encoding="UTF-8"?>

<odoo>

     <!-- Pivot View-->
    <record id="project_milestone_view_pivot" model="ir.ui.view">
        <field name="name">Project Milestone Pivot</field>
        <field name="model">project.milestone</field>
        <field name="arch" type="xml">
            <pivot string="Milestone Analysis" disable_linking="True">
                <field name="name"  type="row"/>
                <field name="estimated_hours" type="measure"/>
                <field name="total_hours" type="measure"/>
                <field name="remaining_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="project_milestone.project_milestone_action" model="ir.actions.act_window">
        <field name="context">{'group_by': ['project_id', 'name']}</field>
    </record>

    <record id="milestone_view_tree_action" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="project_milestone.project_milestone_view_list"/>
        <field name="act_window_id" ref="project_milestone.project_milestone_action"/>
    </record>

    <record id="milestone_view_pivot_action" model="ir.actions.act_window.view">
        <field eval="3" name="sequence"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="project_milestone_view_pivot"/>
        <field name="act_window_id" ref="project_milestone.project_milestone_action"/>
    </record>

</odoo>