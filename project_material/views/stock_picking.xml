<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_picking_form_with_task" model="ir.ui.view">
        <field name="name">Stock Picking Form: add project and task</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="project_id" readonly="1" attrs="{'invisible': [('project_id', '=', False)]}"/>
                <field name="task_id" readonly="1" attrs="{'invisible': [('task_id', '=', False)]}"/>
            </field>
        </field>
    </record>

</odoo>
