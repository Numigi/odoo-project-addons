<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Form View -->
    <record id="project_milestone_type_color_view_form" model="ir.ui.view">
        <field name="name">Project Milestone Types Form: Add HTML Color</field>
        <field name="model">project.milestone.type</field>
        <field name="inherit_id" ref="project_milestone_type.project_milestone_type_view_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="html_color" placeholder="#FF0000" widget="color"/>
            </field>
        </field>
    </record>

    <!-- List View -->
    <record id="project_milestone_type_color_view_tree" model="ir.ui.view">
        <field name="name">Project Milestone Types Tree: Add HTML Color</field>
        <field name="model">project.milestone.type</field>
        <field name="inherit_id" ref="project_milestone_type.project_milestone_type_view_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="html_color" widget="color"/>
            </field>
        </field>
    </record>

</odoo>
