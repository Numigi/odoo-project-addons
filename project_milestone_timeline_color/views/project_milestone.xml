<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Timeline View -->
    <record id="project_milestone_timeline_color_form_view" model="ir.ui.view">
        <field name="model">project.milestone</field>
        <field name="inherit_id" ref="project_milestone_timeline.project_milestone_timeline_form_view"/>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <xpath expr="//timeline" position="attributes">
                    <attribute name="color_field">color</attribute>
            </xpath>
        </field>
    </record>

</odoo>
