<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="supplier_invoice_form_with_outsourcing" model="ir.ui.view">
        <field name="name">Supplier Invoice Form: add outsourcing fields</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='account_id']" position="before">
                <field name="is_outsourcing" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='account_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_outsourcing', '=', True)]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='account_analytic_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_outsourcing', '=', True)]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
