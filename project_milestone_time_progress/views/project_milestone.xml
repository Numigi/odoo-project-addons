<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Form View -->
    <record id="project_milestone_progress_form" model="ir.ui.view">
        <field name="name">Project Milestone Progress Form</field>
        <field name="model">project.milestone</field>
        <field name="inherit_id" ref="project_milestone.project_milestone_view_form"/>
        <field name="arch" type="xml">
            <field name="progress" position="replace">
                <field name="show_progress_info_message" invisible="1"/>
                <field name="progress" widget="progressbar"
                       attrs="{'invisible':[('show_progress_info_message','=', True)]}"/>
                <div attrs="{'invisible':[('show_progress_info_message','=', False)]}">
                    <div class="bg-info">
                        Please enter <b>Estimated Hours</b> to show Progress %.
                    </div>
                </div>
            </field>
        </field>
    </record>

</odoo>
