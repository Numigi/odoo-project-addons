<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Form View -->
    <record id="project_active_view_form" model="ir.ui.view">
        <field name="name">Project Active Form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="attributes">
                <attribute
                    name="confirm">(Un)archiving a project automatically (un)archives its tasks and milestones. Do you want to proceed?
                </attribute>
            </button>
        </field>
    </record>

</odoo>
