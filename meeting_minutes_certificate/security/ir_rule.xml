<odoo>

  <record id="rule_portal_own_meeting_minutes" model="ir.rule">
    <field name="name">Meeting Minutes: Portal Access</field>
    <field name="model_id" ref="model_meeting_minutes_project"/>
    <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    <field name="domain_force">[('signature_ids.partner_id', '=', user.partner_id.id)]</field>
  </record>

  <record id="rule_portal_own_signature" model="ir.rule">
    <field name="name">Meeting Minutes Signature: Portal Access</field>
    <field name="model_id" ref="model_meeting_minutes_signature"/>
    <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
  </record>

</odoo>
