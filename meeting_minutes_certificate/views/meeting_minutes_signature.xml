<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="meeting_minutes_signature_form" model="ir.ui.view">
        <field name="name">Meeting Minutes Signature</field>
        <field name="model">meeting.minutes.signature</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" states="draft,sent,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="task_id"/>
                        <field name="partner_id"/>
                        <field name="type_"/>
                        <field name="signature_datetime"/>
                        <field name="signature" widget="image"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
