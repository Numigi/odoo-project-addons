<?xml version="1.0" encoding="UTF-8"?>
<odoo>

       <record id="edit_project_invoicing_profile_form" model="ir.ui.view">
            <field name="name">Edit project : Invoicing profile Form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                 <xpath expr="//page[@name='settings']/group" position="inside">
                     <field name="invoicing_profile_id"
                            groups="project_invoicing_profile.group_project_invoicing_profile"/>
                 </xpath>
            </field>
       </record>

       <record id="edit_project_invoicing_profile_search" model="ir.ui.view">
            <field name="name">project.project.select :Invoicing profile </field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                       <field name="invoicing_profile_id"/>
                </xpath>
                 <xpath expr="//filter[@name='Partner']/.." position="inside">
                       <filter string="Invoicing profile" name="invoicing_profile_id"
                               context="{'group_by':'invoicing_profile_id'}"/>
                  </xpath>
            </field>
       </record>

      <record id="view_task_invoicing_profile_search" model="ir.ui.view">
            <field name="name">project.task.serach :Invoicing profile </field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='stage_id']" position="after">
                       <field name="invoicing_profile_id"/>
                </xpath>
                 <xpath expr="//filter[@name='stage']/.." position="inside">
                       <filter string="Invoicing profile" name="invoicing_profile_id"
                               context="{'group_by':'invoicing_profile_id'}"/>
                  </xpath>
            </field>
       </record>

     <record id="view_timesheet_invoicing_profile_search" model="ir.ui.view">
            <field name="name">account.analytic.line.search :Invoicing profile </field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                       <field name="invoicing_profile_id"/>
                </xpath>
                 <xpath expr="//filter[@name='groupby_task']/.." position="inside">
                       <filter string="Invoicing profile" name="invoicing_profile_id"
                               context="{'group_by':'invoicing_profile_id'}"/>
                  </xpath>
            </field>
       </record>


</odoo>